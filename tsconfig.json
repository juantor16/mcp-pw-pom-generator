{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": ["src/**/*", "playwright.config.ts"],
  "exclude": ["node_modules", "dist"]
}